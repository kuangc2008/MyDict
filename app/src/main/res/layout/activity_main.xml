<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/drawerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:background="?colorPrimary"
                android:gravity="center"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@id/iv_books"
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="10.0dip"
                        android:padding="5.0dip"
                        android:src="@drawable/ic_menu" />
                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@id/middle_content"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main_tab_bg"
            android:paddingBottom="3.0dip"
            android:paddingTop="5.0dip">

            <LinearLayout
                android:id="@id/ll_menu_1"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/iv_menu_1"
                    android:layout_width="23.0dip"
                    android:layout_height="20.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习"
                    android:textSize="12.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/ll_menu_2"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/iv_menu_2"
                    android:layout_width="23.0dip"
                    android:layout_height="20.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一览"
                    android:textSize="12.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/ll_menu_3"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/iv_menu_3"
                    android:layout_width="23.0dip"
                    android:layout_height="20.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于毕设"
                    android:textSize="12.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/ll_menu_4"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/iv_menu_4"
                    android:layout_width="23.0dip"
                    android:layout_height="20.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我"
                    android:textSize="12.0dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>